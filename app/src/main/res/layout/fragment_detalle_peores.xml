<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.peores.DetallePeoresFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgDetallePeor"
            android:layout_width="138dp"
            android:layout_height="90dp"
            android:layout_marginTop="24dp"
            android:src="@android:drawable/btn_dialog"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDetalleTitulo"
            android:layout_width="229dp"
            android:layout_height="63dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#FF5722"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/imgDetallePeor"
            app:layout_constraintStart_toStartOf="@+id/imgDetallePeor"
            app:layout_constraintTop_toBottomOf="@+id/imgDetallePeor" />

        <TextView
            android:id="@+id/tvComentario"
            android:layout_width="292dp"
            android:layout_height="185dp"
            android:layout_marginTop="24dp"
            android:text="TextView"
            android:textColor="#282B28"
            app:layout_constraintEnd_toEndOf="@+id/tvDetalleTitulo"
            app:layout_constraintStart_toStartOf="@+id/tvDetalleTitulo"
            app:layout_constraintTop_toBottomOf="@+id/tvDetalleTitulo" />
    </android.support.constraint.ConstraintLayout>
</FrameLayout>